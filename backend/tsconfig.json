{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2020",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@mytypes/*": ["../shared/src/types/*"],
      "@mocks/*": ["../shared/src/__mocks__/*"]
    }
  },
  "include": ["src/**/*", "src/server.ts", "../shared/src/**/*.ts"],
  "exclude": ["node_modules"]
}
