{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"]
    }
  },
  "include": ["shared/src/**/*", "backend/src/**/*", "frontend/src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./shared" }]
}
